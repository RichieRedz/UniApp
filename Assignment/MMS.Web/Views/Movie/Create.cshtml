@model MovieReviewViewModel

<partial name="_BreadCrumbs" model=@(new [] {
("/", "Home"),
("/Movie", "Movies"),
("","Create Movie")
}) />

<div class="card rounded shadow p-4 mt-3 custom-card">
    <h3 class="border-bottom">Add New Movie</h3>

    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Title -->
        <div class="mt-3">
            <label asp-for="Movie.Title" class="form-label"></label>
            <input asp-for="Movie.Title" class="form-control form-input"/>
            <span asp-validation-for="Movie.Title" class="text-danger"></span>
        </div>

        <!-- Year -->
        <div class="mt-3">
            <label asp-for="Movie.Year" class="form-label"></label>
            <input asp-for="Movie.Year" class="form-control form-input"/>
            <span asp-validation-for="Movie.Year" class="text-danger"></span>
        </div>

        <!-- Genre -->
        <div class="mt-3">
            <label asp-for="Movie.MovieGenre" class="form-label"></label>
            <select asp-for="Movie.MovieGenre" class="form-control form-input" required>
                <option value=""disabled selected>Select Genre</option>
                <option value="Action">Action</option>
                <option value="Adventure">Adventure</option>
                <option value="Comedy">Comedy</option>
                <option value="Drama">Drama</option>
                <option value="Fantasy">Fantasy</option>
                <option value="Crime">Crime</option>
                <option value="Horror">Horror</option>
                <option value="Romance">Romance</option>
                <option value="SciFi">Sci-Fi</option>
                <option value="Thriller">Thriller</option>
                <option value="Other">Other</option>
            </select>
            <span asp-validation-for="Movie.MovieGenre" class="text-danger"></span>
        </div>

        <!-- Photo URL -->
        <div class="mt-3">
            <label asp-for="Movie.PhotoURL" class="form-label"></label>
            <input asp-for="Movie.PhotoURL" type="url" class="form-control form-input"/>
            <span asp-validation-for="Movie.PhotoURL" class="text-danger"></span>
        </div>

        <!-- Review Author -->
        <div class="mt-3">
            <label asp-for="Review.ReviewAuthor" class="form-label"></label>
            <input asp-for="Review.ReviewAuthor" class="form-control form-input" required/>
            <span asp-validation-for="Review.ReviewAuthor" class="text-danger"></span>
        </div>

        <!-- Rating -->
        <div class="mt-3">
            <label asp-for="Review.Rating" class="form-label"></label>
            <input asp-for="Review.Rating" class="form-control form-input" type="number" min="1" max="5" required/>
            <span asp-validation-for="Review.Rating" class="text-danger"></span>
        </div>

        <!-- Review Text -->
        <div class="mt-3">
            <label asp-for="Review.ReviewText" class="form-label"></label>
            <textarea asp-for="Review.ReviewText" class="form-control form-input" rows="3"></textarea>
            <span asp-validation-for="Review.ReviewText" class="text-danger"></span>
        </div>

        <!-- Image Upload -->
        @* <div class="mt-3">
            <label asp-for="PhotoURL" class="form-label"></label>
            <input type="file" id="ImageFile" name="ImageFile" class="form-control" accept="image/*" required/>
            <span asp-validation-for="PhotoURL" class="text-danger"></span>
        </div> *@

        <div class="mt-3">
            <button type="submit" class="btn btn-primary m-2">Create</button>
            <a class="btn btn-secondary m-2" asp-action="Index">Cancel</a>
        </div>

    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
